        </Box>
      ) : (
        <div className="space-y-4">
          {filteredTickets.length === 0 ? (
            <Card sx={{ backgroundColor: "#1a1a1a", color: "white" }}>
              <CardContent className="text-center py-12">
                <AssignmentIcon
                  sx={{ fontSize: 64, color: "gray", mb: 2 }}
                />
                <Typography variant="h6" className="text-gray-400">
                  No tickets found
                </Typography>
                <Typography
                  variant="body2"
                  className="text-gray-500 mt-2"
                >
                  {selectedTab === 1
                    ? "No open tickets"
                    : selectedTab === 2
                    ? "No closed tickets"
                    : "Try adjusting your filters"}
                </Typography>
              </CardContent>
            </Card>
          ) : (
            filteredTickets.map((ticket) => (
              <StyledCard
                key={ticket.id}
                priority={ticket.priority}
                sx={{
                  backgroundColor: "#1a1a1a",
                  color: "white",
                  cursor: "pointer",
                }}
                onClick={() => handleOpenTicket(ticket.id)}
              >
                <CardContent>
                  <Grid container spacing={2} alignItems="center">
                    <Grid item xs={12} md={6}>
                      <Box display="flex" alignItems="center" gap={2}>
                        <PriorityChip
                          priority={ticket.priority}
                          label={ticket.priority.toUpperCase()}
                          size="small"
                        />
                        <StatusChip
                          status={ticket.status}
                          label={ticket.status.toUpperCase()}
                          size="small"
                        />
                      </Box>
                      <Typography
                        variant="h6"
                        className="font-semibold mt-2 mb-1"
                      >
                        {ticket.subject}
                      </Typography>
                      <Typography
                        variant="body2"
                        className="text-gray-400"
                      >
                        {ticket.description.length > 100
                          ? `${ticket.description.substring(0, 100)}...`
                          : ticket.description}
                      </Typography>
                    </Grid>
                    <Grid item xs={12} md={3}>
                      <Box
                        display="flex"
                        alignItems="center"
                        gap={1}
                        mb={1}
                      >
                        <PersonIcon
                          sx={{ fontSize: 16, color: "gray" }}
                        />
                        <Typography
                          variant="body2"
                          className="text-gray-400"
                        >
                          Created by: {ticket.created_by_name || "Unknown"}
                        </Typography>
                      </Box>
                      <Box
                        display="flex"
                        alignItems="center"
                        gap={1}
                      >
                        <CalendarIcon
                          sx={{ fontSize: 16, color: "gray" }}
                        />
                        <Typography
                          variant="body2"
                          className="text-gray-400"
                        >
                          {formatDate(ticket.created_at)}
                        </Typography>
                      </Box>
                    </Grid>
                    <Grid item xs={12} md={3}>
                      {ticket.assigned_users_details.length > 0 && (
                        <Box>
                          <Typography
                            variant="body2"
                            className="text-gray-400 mb-1"
                          >
                            Assigned to:
                          </Typography>
                          <Box
                            display="flex"
                            flexWrap="wrap"
                            gap={1}
                          >
                            {ticket.assigned_users_details
                              .slice(0, 3)
                              .map((assignee) => (
                                <Chip
                                  key={assignee.user_id}
                                  label={assignee.name}
                                  size="small"
                                  avatar={
                                    <Avatar
                                      sx={{ width: 24, height: 24 }}
                                    >
                                      {assignee.name.charAt(0)}
                                    </Avatar>
                                  }
                                  sx={{
                                    backgroundColor: "#333",
                                    color: "white",
                                  }}
                                />
                              ))}
                            {ticket.assigned_users_details.length > 3 && (
                              <Chip
                                label={`+${
                                  ticket.assigned_users_details.length - 3
                                }`}
                                size="small"
                                sx={{ backgroundColor: "#333", color: "white" }}
                              />
                            )}
                          </Box>
                        </Box>
                      )}
                      <Box
                        display="flex"
                        alignItems="center"
                        gap={2}
                        mt={2}
                      >
                        <Box
                          display="flex"
                          alignItems="center"
                          gap={1}
                        >
                          <CommentIcon
                            sx={{ fontSize: 16, color: "gray" }}
                          />
                          <Typography
                            variant="body2"
                            className="text-gray-400"
                          >
                            {ticket.comments?.length || 0}
                          </Typography>
                        </Box>
                        <Box
                          display="flex"
                          alignItems="center"
                          gap={1}
                        >
                          <AttachFileIcon
                            sx={{ fontSize: 16, color: "gray" }}
                          />
                          <Typography
                            variant="body2"
                            className="text-gray-400"
                          >
                            {ticket.attachments?.length || 0}
                          </Typography>
                        </Box>
                      </Box>
                    </Grid>
                  </Grid>
                </CardContent>
              </StyledCard>
            ))
          )}
        </div>
      )}

      {/* Create Ticket Dialog */}
      <Dialog
        open={openCreateDialog}
        onClose={() => {
          setOpenCreateDialog(false);
          setSelectedFiles([]);
        }}
        maxWidth="md"
        fullWidth
        PaperProps={{
          sx: { backgroundColor: "#ffffff", color: "black" },
        }}
      >
        <DialogTitle>
          <div className="flex justify-between items-center mb-4">
            <h2 className="text-blue-600 text-xl font-semibold">ADD TICKET</h2>
            <button
              className="text-gray-500 hover:text-gray-700"
              onClick={() => {
                setOpenCreateDialog(false);
                setSelectedFiles([]);
              }}
            >
              Ã—
            </button>
          </div>
        </DialogTitle>
        <DialogContent>
          <div className="space-y-4">
            <div>
              <label className="block text-gray-600 font-medium mb-1">
                CREATED BY
              </label>
              <input
                type="text"
                value={createdBy}
                onChange={(e) => setCreatedBy(e.target.value)}
                className="w-full p-2 border rounded-md bg-white text-black border-gray-300"
                placeholder=""
              />
            </div>
            <div>
              <label className="block text-gray-600 font-medium mb-1">
                SUBJECT
              </label>
              <input
                type="text"
                value={newTicket.subject}
                onChange={(e) =>
                  setNewTicket((prev) => ({
                    ...prev,
                    subject: e.target.value,
                  }))
                }
                className="w-full p-2 border rounded-md bg-white text-black border-gray-300"
                placeholder=""
              />
            </div>
            <div>
              <label className="block text-gray-600 font-medium mb-1">
                TICKET DETAILS...
              </label>
              <textarea
                value={newTicket.description}
                onChange={(e) =>
                  setNewTicket((prev) => ({
                    ...prev,
                    description: e.target.value,
                  }))
                }
                className="w-full p-2 border rounded-md bg-white text-black border-gray-300 h-24"
                placeholder=""
              ></textarea>
            </div>
            <div>
              <label className="block text-gray-600 font-medium mb-1">
                ATTACHMENTS
              </label>
              <input
                type="file"
                multiple
                accept="image/*"
                onChange={handleFileChange}
                className="w-full p-2 border rounded-md bg-blue-500 text-white cursor-pointer hidden"
                id="fileInput"
              />
              <label
                htmlFor="fileInput"
                className="w-full bg-blue-500 text-white p-2 rounded-md flex items-center justify-center cursor-pointer"
              >
                <span className="mr-2">ðŸ“Ž</span> PHOTO/PDF
              </label>
              {selectedFiles.length > 0 && (
                <div className="mt-2">
                  <p className="text-gray-600">Selected Images:</p>
                  <div className="grid grid-cols-2 gap-2">
                    {selectedFiles.map((file, index) => (
                      <img
                        key={index}
                        src={URL.createObjectURL(file)}
                        alt={`Preview ${index}`}
                        className="w-full h-20 object-cover rounded-md"
                      />
                    ))}
                  </div>
                </div>
              )}
            </div>
            <div>
              <div className="relative">
                <input
                  type="text"
                  value={assignedTo}
                  onClick={handleAssignClick}
                  className="w-full p-2 border rounded-md cursor-pointer bg-white text-black border-gray-300"
                  placeholder="ASSIGN TO"
                  readOnly
                />
                {showDropdown && (
                  <div className="absolute w-full bg-white border rounded-md mt-1 z-10">
                    <div
                      onClick={() => handleAssignSelect("SOHAIL")}
                      className="p-2 hover:bg-gray-100 text-black cursor-pointer"
                    >
                      SOHAIL
                    </div>
                    <div
                      onClick={() => handleAssignSelect("SOYEB")}
                      className="p-2 hover:bg-gray-100 text-black cursor-pointer"
                    >
                      SOYEB
                    </div>
                    <div
                      onClick={() => handleAssignSelect("ADMIN")}
                      className="p-2 hover:bg-gray-100 text-black cursor-pointer"
                    >
                      ADMIN
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        </DialogContent>
        <DialogActions sx={{ justifyContent: "flex-start", p: 3 }}>
          <button
            className="bg-blue-500 text-white p-2 rounded-md mr-2"
            onClick={handleCreateTicket}
            disabled={!newTicket.subject || !newTicket.description}
          >
            <span className="mr-2">ðŸš€</span> ADD
          </button>
          <button
            className="bg-blue-500 text-white p-2 rounded-md"
            onClick={() => {
              setOpenCreateDialog(false);
              setSelectedFiles([]);
            }}
          >
            CANCEL
          </button>
        </DialogActions>
      </Dialog>

      {/* Ticket Details Dialog */}
      <Dialog
        open={openTicketDialog}
        onClose={() => setOpenTicketDialog(false)}
        maxWidth="lg"
        fullWidth
        PaperProps={{
          sx: { backgroundColor: "#1a1a1a", color: "white", maxHeight: "90vh" },
        }}
      >
        {selectedTicket && (
          <>
            <DialogTitle>
              <Box
                display="flex"
                alignItems="center"
                justifyContent="space-between"
              >
                <Box>
                  <Typography variant="h6">{selectedTicket.subject}</Typography>
                  <Box display="flex" gap={1} mt={1}>
                    <PriorityChip
                      priority={selectedTicket.priority}
                      label={selectedTicket.priority.toUpperCase()}
                      size="small"
                    />
                    <StatusChip
                      status={selectedTicket.status}
                      label={selectedTicket.status.toUpperCase()}
                      size="small"
                    />
                  </Box>
                </Box>
                <Box display="flex" gap={1}>
                  {selectedTicket.status === "open" && (
                    <Button
                      variant="contained"
                      color="error"
                      onClick={() => handleCloseTicket()}
                      startIcon={<CheckCircleIcon />}
                    >
                      Close Ticket
                    </Button>
                  )}
                  <IconButton
                    onClick={() => setOpenTicketDialog(false)}
                    sx={{ color: "white" }}
                  >
                    <CloseIcon />
                  </IconButton>
                </Box>
              </Box>
            </DialogTitle>
            <DialogContent dividers>
              <Grid container spacing={3}>
                {/* Ticket Details */}
                <Grid item xs={12} md={8}>
                  <Typography variant="h6" gutterBottom>
                    Description
                  </Typography>
                  <Typography
                    variant="body1"
                    className="text-gray-300 mb-4"
                  >
                    {selectedTicket.description}
                  </Typography>

                  {/* Comments Section */}
                  <Typography variant="h6" gutterBottom>
                    Comments ({selectedTicket.comments?.length || 0})
                  </Typography>
                  <Box sx={{ maxHeight: 300, overflowY: "auto", mb: 3 }}>
                    {selectedTicket.comments?.map((comment, index) => (
                      <Card
                        key={comment.comment_id || index}
                        sx={{ backgroundColor: "#2a2a2a", mb: 2 }}
                      >
                        <CardContent>
                          <Box
                            display="flex"
                            justifyContent="space-between"
                            alignItems="center"
                            mb={1}
                          >
                            <Typography
                              variant="subtitle2"
                              className="text-blue-400"
                            >
                              {comment.created_by_name || "Unknown User"}
                            </Typography>
                            <Typography
                              variant="caption"
                              className="text-gray-500"
                            >
                              {formatDate(comment.created_at)}
                            </Typography>
                          </Box>
                          <Typography
                            variant="body2"
                            className="text-gray-300"
                          >
                            {comment.content}
                          </Typography>
                        </CardContent>
                      </Card>
                    ))}
                  </Box>

                  {/* Add Comment */}
                  <Box display="flex" gap={2}>
                    <TextField
                      fullWidth
                      label="Add a comment"
                      value={newComment}
                      onChange={(e) => setNewComment(e.target.value)}
                      variant="outlined"
                      multiline
                      rows={2}
                      sx={{
                        "& .MuiOutlinedInput-root": {
                          color: "white",
                          "& fieldset": { borderColor: "gray" },
                          "&:hover fieldset": { borderColor: "white" },
                        },
                        "& .MuiInputLabel-root": { color: "gray" },
                      }}
                    />
                    <Button
                      variant="contained"
                      onClick={handleAddComment}
                      disabled={!newComment.trim()}
                      sx={{
                        backgroundColor: "#2196f3",
                        color: "white",
                        "&:hover": { backgroundColor: "#1976d2" },
                      }}
                    >
                      Add
                    </Button>
                  </Box>
                </Grid>

                {/* Sidebar with ticket info */}
                <Grid item xs={12} md={4}>
                  <Card sx={{ backgroundColor: "#2a2a2a", color: "white" }}>
                    <CardContent>
                      <Typography variant="h6" gutterBottom>
                        Ticket Information
                      </Typography>

                      <Box mb={2}>
                        <Typography
                          variant="body2"
                          className="text-gray-400"
                        >
                          Created by
                        </Typography>
                        <Typography variant="body1">
                          {selectedTicket.created_by_name || "Unknown User"}
                        </Typography>
                      </Box>

                      <Box mb={2}>
                        <Typography
                          variant="body2"
                          className="text-gray-400"
                        >
                          Created at
                        </Typography>
                        <Typography variant="body1">
                          {formatDate(selectedTicket.created_at)}
                        </Typography>
                      </Box>

                      <Box mb={2}>
                        <Typography
                          variant="body2"
                          className="text-gray-400"
                        >
                          Last updated
                        </Typography>
                        <Typography variant="body1">
                          {formatDate(selectedTicket.updated_at)}
                        </Typography>
                      </Box>

                      {selectedTicket.assigned_users_details.length > 0 && (
                        <Box mb={2}>
                          <Typography
                            variant="body2"
                            className="text-gray-400"
                          >
                            Assigned to
                          </Typography>
                          {selectedTicket.assigned_users_details.map(
                            (assignee) => (
                              <Box
                                key={assignee.user_id}
                                display="flex"
                                alignItems="center"
                                gap={1}
                                mt={1}
                              >
                                <Avatar
                                  sx={{ width: 24, height: 24 }}
                                >
                                  {assignee.name.charAt(0)}
                                </Avatar>
                                <Typography variant="body2">
                                  {assignee.name}
                                  {assignee.role_name && (
                                    <span className="text-gray-400">
                                      {" "}
                                      ({assignee.role_name})
                                    </span>
                                  )}
                                </Typography>
                              </Box>
                            )
                          )}
                        </Box>
                      )}

                      {selectedTicket.tags &&
                        selectedTicket.tags.length > 0 && (
                          <Box mb={2}>
                            <Typography
                              variant="body2"
                              className="text-gray-400"
                              gutterBottom
                            >
                              Tags
                            </Typography>
                            <Box
                              display="flex"
                              flexWrap="wrap"
                              gap={1}
                            >
                              {selectedTicket.tags.map((tag, index) => (
                                <Chip
                                  key={index}
                                  label={tag}
                                  size="small"
                                  sx={{
                                    backgroundColor: "#333",
                                    color: "white",
                                  }}
                                />
                              ))}
                            </Box>
                          </Box>
                        )}
                    </CardContent>
                  </Card>

                  {/* Attachments */}
                  <Card
                    sx={{ backgroundColor: "#2a2a2a", color: "white", mt: 2 }}
                  >
                    <CardContent>
                      <Typography variant="h6" gutterBottom>
                        Attachments (
                        {selectedTicket.attachments?.length || 0})
                      </Typography>

                      {selectedTicket.attachments?.map(
                        (attachment, index) => (
                          <Box
                            key={attachment.attachment_id || index}
                            display="flex"
                            alignItems="center"
                            gap={2}
                            mb={1}
                          >
                            <AttachFileIcon sx={{ color: "gray" }} />
                            <Box flex={1}>
                              <Typography variant="body2">
                                {attachment.filename}
                              </Typography>
                              <Typography
                                variant="caption"
                                className="text-gray-500"
                              >
                                {attachment.file_size
                                  ? `${(
                                      attachment.file_size / 1024
                                    ).toFixed(1)} KB`
                                  : "Unknown size"}
                              </Typography>
                            </Box>
                          </Box>
                        )
                      )}

                      <Divider
                        sx={{ backgroundColor: "gray", my: 2 }}
                      />

                      <Box
                        display="flex"
                        gap={2}
                        alignItems="center"
                      >
                        <input
                          type="file"
                          onChange={(e) =>
                            setAttachmentFile(e.target.files[0])
                          }
                          style={{ display: "none" }}
                          id="attachment-upload"
                        />
                        <label htmlFor="attachment-upload">
                          <Button
                            variant="outlined"
                            component="span"
                            sx={{ color: "white", borderColor: "white" }}
                          >
                            Choose File
                          </Button>
                        </label>
                        {attachmentFile && (
                          <Button
                            variant="contained"
                            onClick={handleUploadAttachment}
                            size="small"
                            sx={{
                              backgroundColor: "#2196f3",
                              color: "white",
                              "&:hover": { backgroundColor: "#1976d2" },
                            }}
                          >
                            Upload
                          </Button>
                        )}
                      </Box>
                      {attachmentFile && (
                        <Typography
                          variant="caption"
                          className="text-gray-400 mt-1"
                        >
                          Selected: {attachmentFile.name}
                        </Typography>
                      )}
                    </CardContent>
                  </Card>
                </Grid>
              </Grid>
            </DialogContent>
          </>
        )}
      </Dialog>

      {/* Snackbar for notifications */}
      <Snackbar
        open={snackbar.open}
        autoHideDuration={6000}
        onClose={() =>
          setSnackbar((prev) => ({ ...prev, open: false }))
        }
      >
        <Alert
          onClose={() =>
            setSnackbar((prev) => ({ ...prev, open: false }))
          }
          severity={snackbar.severity}
          sx={{ width: "100%" }}
        >
          {snackbar.message}
        </Alert>
      </Snackbar>
    </div>
  );
}
export default TicketPage;