{
  "apps": [
    {
      "name": "rupiyame-backend",
      "script": "/www/wwwroot/RupiyaMe/backend/venv/bin/python",
      "args": ["-m", "app"],
      "cwd": "/www/wwwroot/RupiyaMe/backend",
      "interpreter": "none",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "PYTHONPATH": "/www/wwwroot/RupiyaMe/backend",
        "ENVIRONMENT": "production"
      },
      "log_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-backend.log",
      "out_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-backend-out.log",
      "error_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-backend-error.log",
      "time": true,
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s"
    },
    {
      "name": "rupiyame-frontend",
      "script": "npm",
      "args": "run dev",
      "cwd": "/www/wwwroot/RupiyaMe/rupiyamaker-UI/crm",
      "interpreter": "none",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "development",
        "VITE_API_BASE_URL": "https://localhost:8049"
      },
      "log_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-frontend.log",
      "out_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-frontend-out.log",
      "error_file": "/www/wwwroot/RupiyaMe/logs/rupiyame-frontend-error.log",
      "time": true,
      "restart_delay": 3000,
      "max_restarts": 5,
      "min_uptime": "10s"
    }
  ]
}